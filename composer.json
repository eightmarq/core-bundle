{
    "name": "eightmarq/core-bundle",
    "description": "Core bundle is a basic bundle for all EightMarq bundles.",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Norbert Schvoy",
            "email": "norbert.schvoy@eightmarq.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "EightMarq\\CoreBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "EightMarq\\CoreBundle\\Tests\\": "tests/" }
    },
    "require": {
        "php": ">=8.3",
        "eightmarq/doctrine-behaviors": "^2.7",
        "symfony/framework-bundle": "^7.1",
        "symfony/uid": "^7.1",
        "doctrine/orm": "^2.19",
        "doctrine/doctrine-bundle": "^2.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1",
        "friendsofphp/php-cs-fixer": "^3.58"
    },
    "scripts": {
        "before-commit": [
            "vendor/bin/php-cs-fixer fix src",
            "vendor/bin/php-cs-fixer fix tests",
            "vendor/bin/phpunit"
        ],
        "code-quality": [
            "vendor/bin/php-cs-fixer fix --dry-run src",
            "vendor/bin/php-cs-fixer fix --dry-run tests"
        ],
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
